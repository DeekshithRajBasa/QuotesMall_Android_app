<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".card_main">



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp">

                    <ImageView

                        android:id="@+id/c1i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/attitude"

                        />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c2i"
                        android:background="@drawable/love"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
                </android.support.v7.widget.CardView>



            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/r2"
                android:layout_below="@id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c3i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fashion"

                        />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="34dp"

                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c4i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/travel"

                        />
                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r3"
                android:layout_below="@id/r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c5i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fitness"

                        />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c6i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/friends"

                        />
                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r4"
                android:layout_below="@id/r3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c7i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/life"

                        />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/c8i"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/nature"

                        />
                </android.support.v7.widget.CardView>

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>